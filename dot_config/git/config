[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[user]
  name = Eve Jensen
  email = evesjensen@gmail.com

[init]
  defaultBranch = main

[color]
  ui = auto

[core]
  excludesfile = ~/.config/git/ignore
  editor = nvim

[merge]
  tool = nvimdiff
  conflictstyle = diff3

[mergetool "nvimdiff"]
  layout = LOCAL,MERGED,REMOTE + (LOCAL,BASE,REMOTE)/MERGED

[diff]
  tool = nvimdiff
  colorMoved = default

[commit]
  verbose = true

[rerere]
  enabled = true
  autoUpdate = true

[push]
  useForceIfIncludes = true

[alias]
  fpush = push --force-with-lease
